{
  "name": "ADVISE",
  "description": "ADVISE+",
  "author": "Conning & Company",
  "main": "../dist/server.js",
  "scripts": {
    "setup": "./build/scripts/developerSetup.sh ; ./build/scripts/setupJulia.sh ; npm run setup:packages:install ; npm run setup:julia",
    "prod:build": "gulp build --prod",
    "prod:build:watch": "gulp build --prod --watch",
    "prod:compile:client": "gulp client:webpack:watch --prod --watch",
    "prod:compile:server": "gulp server:webpack:watch --prod --watch",
    "prod:server": "node dist/server.min.js",
    "clean:dist": "gulp clean",
    "clean:julia": "gulp julia:clear-data",
    "compile:dlls": "gulp dlls:webpack:compile",
    "start:all": "npm run start:client & npm run start:server & npm run start:julia",
    "start:only:client": "node --max-old-space-size=4096 ./node_modules/.bin/gulp  client:webpack:watch",
    "start:client": "node --max-old-space-size=4096 ./node_modules/.bin/gulp dlls:webpack:compile ; node --max-old-space-size=4096 ./node_modules/.bin/gulp  client:webpack:watch",
    "start:server": "gulp server:webpack:watch --start",
    "julia:register-dev-sims": "gulp julia:registerDevSims",
    "start:julia": "pkill julia-webvise ; gulp julia:start",
    "start:julia:noauth": "pkill julia-webvise ; gulp julia:start --auth=false",
    "start:feathers": "node src/db/src/",
    "setup-nginx": "cd ./build/scripts ; sudo ./setup-nginx.sh ; cd ../..",
    "setup:packages:install": "yarn install; gulp julia:setup:3rdPartyPackages",
    "setup:install:upgrade": "yarn upgrade ; gulp julia:update:packages",
    "setup:julia": "./build/scripts/setupJulia.sh ; gulp julia:setup:3rdPartyPackages ; gulp julia:setup",
    "setup:julia:repos-only": "gulp julia:setup",
    "test:client": "gulp karma:test:unitTestsOnly:watch",
    "test:julia": "echo '--- Run julia unit tests and watch for changes ---' & gulp julia:tests:watch --run",
    "test:teamcity:setup": "npm run kill:all; npm run clean:julia; npm run setup; npm run start:client & npm run start:server & npm run start:julia:noauth &",
    "test": "gulp karma:test",
    "kill:julia-webvise": "pkill julia-webvise 2> /dev/null",
    "kill:all": "pkill node gulp julia-webvise 2> /dev/null",
    "tslint": "tslint  -c tslint.json --project ./tsconfig.json",
    "web:client": "open http://localhost:8060/user-preferences?tab\\=system-information",
    "web:karma:testing": "open http://localhost:9876/",
    "web:karma::testing:debug": "open http://localhost:9876/debug.html",
    "web:jira": "open https://jira.advise-conning.com/projects/WEB/summary",
    "web:jira:current-sprint": "open https://jira.advise-conning.com/secure/RapidBoard.jspa?rapidView\\=23",
    "web:teamcity": "open https://git.advise-conning.com/projects/AD/repos/webvise/browse",
    "web:webvise-repo": "open https://git.advise-conning.com/projects/AD/repos/webvise/browse",
    "web:webex": "open https://conningmeet.webex.com/mw3100/mywebex/cmr/pmrlobby.do\\?siteurl\\=conningmeet\\&username\\=david.weiss\\&fromLink\\=true",
    "help": "open https://git.advise-conning.com/projects/AD/repos/webvise/browse/readme.md"
  }
}
